# If typecheck fails, cancel commit
if [ $? -ne 0 ]; then
  echo "âŒ Commit cancelled: TypeScript found type errors"
  exit 1
fi

# Run lint
echo "ğŸ” Running lint..."
npm run lint

# If lint fails, cancel commit
if [ $? -ne 0 ]; then
  echo "âŒ Commit cancelled: ESLint found errors"
  echo "ğŸ’¡ Run 'npm run lint:fix' to fix automatically"
  exit 1
fi

# Run lint-staged
echo "ğŸ” Running lint-staged..."
npx lint-staged

# If lint-staged fails, cancel commit
if [ $? -ne 0 ]; then
  echo "âŒ Commit cancelled: Lint-staged failed"
  exit 1
fi

# Run tests with coverage and verify minimum 80%
echo "ğŸ§ª Running tests with coverage..."
npm run test:coverage:threshold

# If tests fail or coverage is less than 80%, cancel commit
if [ $? -ne 0 ]; then
  echo "âŒ Commit cancelled: Tests failed or coverage is less than 80%"
  echo "ğŸ’¡ Run 'npm run test:coverage' to see full report"
